### Download stock data usin yfinance
import yfinance as yf
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

plt.style.use('seaborn-v0_8')

### Download Stock Data
# Define stock ticker and time range
ticker = "AAPL"             # Example: Apple or any stock you  need 
start_date = "2015-01-01"
end_date = "2024-01-01"

# Download data
stock_data = yf.download(ticker, start=start_date, end=end_date)

# Display first 5 rows
stock_data.head()

### Save Data to CSV File
csv_filename = f"{ticker}_stock_data.csv"
stock_data.to_csv(csv_filename)


# Check structure
stock_data.info()

# Summary statistics
stock_data.describe()

## Plot Adjusted Close Price
plt.figure(figsize=(12,6))
plt.plot(stock_data['Adj Close'], label='Adjusted Close')
plt.title(f'{ticker} Adjusted Closing Price')
plt.xlabel('Date')
plt.ylabel('Price (USD)')
plt.legend()
plt.show()


